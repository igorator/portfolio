{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/icons/*": ["./app/shared/icons/*"],
      "@/logos/*": ["./public/logos/*"],
      "@/components/*": ["./app/shared/components/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/data/*": ["./app/shared/data/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/shared/animations/ASCIITextAnimaiton.jsx",
    "app/shared/animations/LinesBackgroundAnimation.jsx"
  ],
  "exclude": ["node_modules"]
}
